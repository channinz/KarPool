<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.channingzhou.karpool.createEvent"
    android:orientation="vertical">

    <TextView android:text="Create your event then people can follow it to arrange the KarPool: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/createEventName"
        android:hint="enter the Event name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/createEventDestZip"
        android:hint="enter the destination's zip code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eventCreator"
        android:hint="let people know the creator of this event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveEvent"
        android:text="save this event and text everyone!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
