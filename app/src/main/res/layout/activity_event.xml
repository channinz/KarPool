<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.channingzhou.karpool.event">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Exist Event Code"
        android:id="@+id/editText"
        android:layout_above="@+id/searchEvent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:id="@+id/searchEvent"
        android:text="@string/search_event"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/createEvent"
        android:layout_alignLeft="@+id/createEvent"
        android:layout_alignStart="@+id/createEvent" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/createEvent"
        android:text="@string/create_event"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
