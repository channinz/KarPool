<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.channingzhou.karpool.driverActivity">

    <EditText android:id="@+id/etxDriverName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Driver's name"
        android:gravity="left"/>

    <EditText android:id="@+id/etxDriverCell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Driver's cell"
        android:gravity="left"
        android:layout_below="@id/etxDriverName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/etxAvaSeats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Available seats"
        android:gravity="left"
        android:layout_below="@id/etxDriverCell"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText android:id="@+id/etxCarType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="CarType"
        android:layout_below="@id/etxAvaSeats"
        android:gravity="left"/>

    <Button
        android:id="@+id/save_driver"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


</RelativeLayout>
